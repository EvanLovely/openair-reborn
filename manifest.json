{
  "name": "OpenAir Reborn",
  "manifest_version": 2,
  "description": "Improves the interface for OpenAir Timesheets.",
  "version": "0.1.0",
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "permissions": [ "https://www.openair.com/*" ],
  "content_scripts": [
    {
      "css": [ "css/timesheets.css", "css/table.css", "lib/chosen/chosen.css" ],
      "js": [ "lib/jquery-2.1.0.min.js", "lib/chosen/chosen.jquery.min.js", "js/timesheets.js", "js/form.js", "js/table.js" ],
      "matches": [ "https://www.openair.com/timesheet.pl*" ]
    }
  ],

  "browser_action": {
      "default_icon": {                    // optional
        "19": "icon16.png",           // optional
        "38": "icon48.png"            // optional
      },
      "default_title": "OpenAir Reborn",      // optional; shown in tooltip
      "default_popup": "timetracker/index.html"        // optional
    }
}
